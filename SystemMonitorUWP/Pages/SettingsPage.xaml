<Page
    x:Class="SystemMonitorUWP.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SystemMonitorUWP.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel Margin="20" HorizontalAlignment="Left">
            
            <TextBlock FontWeight="Bold" FontSize="24" Text="Settings" Padding="0,0,0,15"></TextBlock>
            
            <ToggleSwitch x:Name="Check_Updates_Switch" Header="Enable update checker?" IsOn="False"
              Toggled="Update_Toggled"/>

            <ComboBox x:Name="ThemeSelector"
                  Header="Choose app theme:"
                  SelectedIndex="2"
                  SelectionChanged="ThemeSelector_SelectionChanged">
                <ComboBoxItem Content="Light" />
                <ComboBoxItem Content="Dark" />
                <ComboBoxItem Content="System Default" />
            </ComboBox>

            <TextBlock FontWeight="Bold" FontSize="24" Text="Experimental settings" Padding="0, 15, 0, 0"></TextBlock>
            
            <ToggleSwitch x:Name="New_Monitor_Desktop_Switch" Header="Enable improved monitoring (Desktop only)" IsOn="False"
                          Toggled="New_Monitor_Desktop_Switch_Toggled"></ToggleSwitch>
        </StackPanel>
    </Grid>
</Page>
